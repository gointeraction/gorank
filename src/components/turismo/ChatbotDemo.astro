---
// ChatbotDemo.astro - Demo component for the tourism chatbot

// Sample chat messages
const messages = [
  {
    sender: 'bot',
    text: '¡Hola! Soy tu asistente de viajes. ¿En qué puedo ayudarte hoy?',
    time: '10:00 AM'
  },
  {
    sender: 'user',
    text: 'Hola, estoy buscando recomendaciones para mis vacaciones',
    time: '10:02 AM'
  },
  {
    sender: 'bot',
    text: '¡Genial! ¿Tienes algún destino en mente o prefieres que te sugiera algunas opciones?',
    time: '10:02 AM'
  },
  {
    sender: 'user',
    text: 'Me gustaría algo con playa y montaña',
    time: '10:03 AM'
  },
  {
    sender: 'bot',
    text: '¡Perfecto! Te recomendaría Costa Rica. Tiene hermosas playas en el Pacífico y el Caribe, y montañas con volcanes activos. ¿Te gustaría más información?',
    time: '10:03 AM'
  }
];
---

<div class="space-y-4 h-full flex flex-col">
  <!-- Chat header -->
  <div class="flex items-center justify-between pb-3 border-b border-gray-700">
    <div class="flex items-center space-x-3">
      <div class="w-3 h-3 rounded-full bg-green-500"></div>
      <h3 class="font-medium text-white">Asistente de Viajes</h3>
    </div>
    <div class="flex space-x-2">
      <button class="text-gray-400 hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Chat messages -->
  <div class="flex-1 overflow-y-auto space-y-4 py-4">
    {messages.map((message, index) => (
      <div class={`flex ${message.sender === 'bot' ? 'justify-start' : 'justify-end'}`} key={index}>
        <div class={`max-w-[80%] rounded-2xl px-4 py-2 ${message.sender === 'bot' 
          ? 'bg-gray-700/50 text-white rounded-tl-none' 
          : 'bg-accent/10 text-white rounded-tr-none'}`}>
          <p class="text-sm">{message.text}</p>
          <p class="text-xs text-gray-400 text-right mt-1">{message.time}</p>
        </div>
      </div>
    ))}
  </div>

  <!-- Chat input -->
  <div class="pt-3 border-t border-gray-700">
    <div class="relative">
      <input 
        type="text" 
        placeholder="Escribe tu mensaje..." 
        class="w-full bg-gray-700/30 text-white rounded-full py-3 px-4 pr-12 focus:outline-none focus:ring-2 focus:ring-accent/50 text-sm"
      />
      <button class="absolute right-2 top-1/2 -translate-y-1/2 p-2 text-accent hover:text-white rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>
</div>
