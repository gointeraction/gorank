    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        // Seleccionar todos los botones de men√∫ desplegable
        const dropdownButtons = document.querySelectorAll('[data-dropdown-toggle]');
        
        dropdownButtons.forEach(button => {
          const menuId = button.getAttribute('data-dropdown-toggle');
          const menu = document.getElementById(menuId);
          
          if (!menu) return;
          
          // Funci√≥n para abrir/cerrar men√∫
          const toggleMenu = (isOpen) => {
            const shouldShow = typeof isOpen === 'boolean' ? isOpen : !menu.classList.contains('hidden');
            button.setAttribute('aria-expanded', !shouldShow);
            menu.classList.toggle('hidden', shouldShow);
          };
          
          // Click en el bot√≥n
          button.addEventListener('click', (e) => {
            e.stopPropagation();
            toggleMenu();
          });
          
          // Cerrar al hacer clic fuera
          document.addEventListener('click', (e) => {
            if (!button.contains(e.target) && !menu.contains(e.target)) {
              toggleMenu(true);
            }
          });
          
          // Cerrar con Escape
          button.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
              toggleMenu(true);
              button.focus();
            }
          });
          
          // Mejorar accesibilidad
          button.setAttribute('aria-haspopup', 'true');
          button.setAttribute('aria-expanded', 'false');
        });
        
        // Cerrar men√∫s al cambiar el tama√±o de la ventana
        window.addEventListener('resize', () => {
          dropdownButtons.forEach(button => {
            const menuId = button.getAttribute('data-dropdown-toggle');
            const menu = document.getElementById(menuId);
            if (menu && !menu.classList.contains('hidden')) {
              menu.classList.add('hidden');
              button.setAttribute('aria-expanded', 'false');
            }
          });
        });
      });
    </script>
  
