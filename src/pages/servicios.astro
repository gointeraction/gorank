<script>
  // Inicializar contador de estad√≠sticas
  function initCounters() {
    const counters = document.querySelectorAll('.stat-value');
    
    counters.forEach(counter => {
      const target = parseInt(counter.getAttribute('data-value'));
      const suffix = counter.getAttribute('data-suffix') || '';
      const duration = 2000; // ms
      const step = Math.ceil(target / (duration / 30)); // Actualizaci√≥n cada 30ms
      let current = 0;
      
      const updateCounter = () => {
        current += step;
        if (current >= target) {
          current = target;
          clearInterval(interval);
        }
        counter.textContent = current + suffix;
      };
      
      const interval = setInterval(updateCounter, 30);
    });
  }
  
  // Inicializar efecto Tilt para tarjetas de servicios
  function initTiltEffect() {
    const tiltElements = document.querySelectorAll('[data-tilt]');
    
    tiltElements.forEach(element => {
      const maxTilt = element.getAttribute('data-tilt-max') || 10;
      
      element.addEventListener('mousemove', e => {
        const rect = element.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        
        const tiltX = ((y - centerY) / centerY) * maxTilt;
        const tiltY = ((centerX - x) / centerX) * maxTilt;
        
        element.style.transform = `perspective(1000px) rotateX(${tiltX}deg) rotateY(${tiltY}deg)`;
      });
      
      element.addEventListener('mouseleave', () => {
        element.style.transform = 'perspective(1000px) rotateX(0) rotateY(0)';
      });
    });
  }
  
  // Controles del carrusel
  function initCarousel() {
    const track = document.querySelector('.case-studies-track');
    const cards = document.querySelectorAll('.case-study-card');
    const dots = document.querySelectorAll('.carousel-dot');
    const prevButton = document.querySelector('.prev-button');
    const nextButton = document.querySelector('.next-button');
    
    if (!track || !cards.length) return;
    
    let currentIndex = 0;
    
    const scrollToCard = (index) => {
      if (index < 0) index = 0;
      if (index >= cards.length) index = cards.length - 1;
      
      currentIndex = index;
      cards[index].scrollIntoView({ behavior: 'smooth', inline: 'center' });
      
      // Actualizar dots
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });
    };
    
    // Click en los dots
    dots.forEach((dot, i) => {
      dot.addEventListener('click', () => scrollToCard(i));
    });
    
    // Botones prev/next
    if (prevButton) {
      prevButton.addEventListener('click', () => scrollToCard(currentIndex - 1));
    }
    
    if (nextButton) {
      nextButton.addEventListener('click', () => scrollToCard(currentIndex + 1));
    }
    
    // Detector de scroll para actualizar dots
    const updateOnScroll = () => {
      // Detecta qu√© tarjeta est√° m√°s centrada en la vista
      const center = track.offsetLeft + track.offsetWidth / 2;
      let closestIndex = 0;
      let closestDistance = Infinity;
      
      cards.forEach((card, i) => {
        const cardCenter = card.offsetLeft + card.offsetWidth / 2;
        const distance = Math.abs(cardCenter - center);
        
        if (distance < closestDistance) {
          closestDistance = distance;
          closestIndex = i;
        }
      });
      
      // Actualizar dots solo si cambia el √≠ndice
      if (closestIndex !== currentIndex) {
        currentIndex = closestIndex;
        dots.forEach((dot, i) => {
          dot.classList.toggle('active', i === closestIndex);
        });
      }
    };
    
    track.addEventListener('scroll', updateOnScroll);
  }
  
  // Animaciones de revelaci√≥n al hacer scroll
  function initScrollReveal() {
    const elements = document.querySelectorAll(
      '.reveal-animation, .reveal-animation-left, .reveal-animation-right'
    );
    
    const revealOnScroll = () => {
      elements.forEach(element => {
        const elementTop = element.getBoundingClientRect().top;
        const elementVisible = 150; // px desde el borde superior de la ventana
        
        if (elementTop < window.innerHeight - elementVisible) {
          element.classList.add('in-view');
        }
      });
    };
    
    // Ejecutar al cargar y al hacer scroll
    window.addEventListener('scroll', revealOnScroll);
    window.addEventListener('load', revealOnScroll);
    // Ejecutamos una vez al inicio para elementos visibles sin scroll
    setTimeout(revealOnScroll, 100);
  }
  
  // Inicializar todas las funcionalidades
  document.addEventListener('DOMContentLoaded', () => {
    initScrollReveal();
    initTiltEffect();
    initCarousel();
    
    // Iniciar contadores cuando la secci√≥n est√© visible
    const observerCallback = (entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          initCounters();
          // Desconectar observer despu√©s de iniciar los contadores
          observer.disconnect();
        }
      });
    };
    
    const observer = new IntersectionObserver(observerCallback, { threshold: 0.5 });
    const statsSection = document.querySelector('.stat-item')?.parentElement;
    
    if (statsSection) {
      observer.observe(statsSection);
    } else {
      // Si no encontramos la secci√≥n, iniciamos los contadores de todos modos
      initCounters();
    }
  });
</script>
