---
// src/pages/servicios/new.astro
import MainLayout from '../../layouts/MainLayout.astro';

const title = "Nuestros Servicios de IA";
const description = "Soluciones avanzadas de inteligencia artificial y transformación digital para impulsar tu negocio.";

// Datos de las categorías de servicios
const serviceCategories = [
  {
    id: "automatizacion",
    title: "Automatización Inteligente",
    description: "Soluciones avanzadas para optimizar y escalar tus operaciones empresariales.",
    icon: "🤖",
    services: [
      {
        title: "ChatBots Empresariales",
        description: "Asistentes virtuales con IA para atención al cliente 24/7 y soporte automatizado.",
        features: [
          "Integración con WhatsApp, Messenger y canales propios",
          "Análisis de sentimiento en tiempo real",
          "Personalización según perfil del cliente",
          "Soporte multilingüe"
        ],
        image: "/images/bots/empresas/hero.jpg",
        link: "/bots/empresas"
      },
      {
        title: "Automatización de Procesos (RPA)",
        description: "Automatización de tareas repetitivas para aumentar la productividad y reducir errores.",
        features: [
          "Automatización de procesos de back-office",
          "Integración con sistemas ERP/CRM",
          "Procesamiento automático de documentos",
          "Monitoreo en tiempo real"
        ],
        image: "/images/rpa-hero.jpg",
        link: "/rpa"
      }
    ]
  },
  {
    id: "analitica",
    title: "Análisis de Datos e Inteligencia de Negocios",
    description: "Transforma tus datos en información valiosa para la toma de decisiones estratégicas.",
    icon: "📊",
    services: [
      {
        title: "Business Intelligence",
        description: "Dashboards interactivos y reportes personalizados para visualizar KPIs clave.",
        features: [
          "Visualización de datos en tiempo real",
          "Alertas y notificaciones automáticas",
          "Análisis predictivo",
          "Acceso móvil"
        ],
        image: "/images/bi-hero.jpg",
        link: "/business-intelligence"
      },
      {
        title: "Ingeniería de Datos",
        description: "Infraestructura escalable para el procesamiento de grandes volúmenes de información.",
        features: [
          "Arquitecturas Big Data",
          "Limpieza y preparación de datos",
          "Pipelines de ETL/ELT",
          "Almacenamiento en la nube"
        ],
        image: "/images/data-engineering.jpg",
        link: "/ingenieria-de-datos"
      }
    ]
  },
  {
    id: "transformacion-digital",
    title: "Transformación Digital",
    description: "Soluciones integrales para la transformación tecnológica de tu negocio.",
    icon: "🚀",
    services: [
      {
        title: "Consultoría en IA",
        description: "Asesoramiento experto para implementar IA en tu organización.",
        features: [
          "Análisis de madurez digital",
          "Diseño de hoja de ruta",
          "Selección de tecnologías",
          "Acompañamiento en implementación"
        ],
        image: "/images/consulting.jpg",
        link: "/consultoria-ia"
      },
      {
        title: "Desarrollo de Aplicaciones con IA",
        description: "Soluciones personalizadas impulsadas por inteligencia artificial.",
        features: [
          "Aplicaciones web y móviles",
          "Integración de modelos de ML",
          "Chatbots avanzados",
          "Sistemas de recomendación"
        ],
        image: "/images/app-development.jpg",
        link: "/desarrollo-aplicaciones-ia"
      },
      {
        title: "Capacitación en IA",
        description: "Programas de formación para equipos técnicos y gerenciales.",
        features: [
          "Cursos personalizados",
          "Talleres prácticos",
          "Certificación internacional",
          "Mentorías personalizadas"
        ],
        image: "/images/training.jpg",
        link: "/capacitacion-ia"
      }
    ]
  }
];

// Testimonios de clientes
const testimonials = [
  {
    quote: "Implementamos los chatbots y redujimos el tiempo de respuesta a clientes en un 80%.",
    author: "Carlos Méndez",
    position: "Director de Servicio al Cliente",
    company: "Empresa Retail"
  },
  {
    quote: "La solución de BI nos permitió tomar decisiones basadas en datos en tiempo real.",
    author: "Ana Torres",
    position: "Gerente de Operaciones",
    company: "Cadena de Restaurantes"
  },
  {
    quote: "Excelente servicio de consultoría que nos ayudó a definir nuestra estrategia de IA.",
    author: "Roberto Sánchez",
    position: "CEO",
    company: "Startup Fintech"
  }
];
---


<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-primary/5 to-transparent">
    <div class="max-w-7xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
        {title}
      </h1>
      <p class="text-xl text-text-secondary max-w-3xl mx-auto mb-12">
        {description}
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="#servicios" class="px-8 py-3 bg-accent text-white font-medium rounded-full hover:bg-accent/90 transition-all transform hover:scale-105">
          Ver Servicios
        </a>
        <a href="/contacto" class="px-8 py-3 border-2 border-accent text-accent font-medium rounded-full hover:bg-accent/10 transition-all">
          Contactar
        </a>
      </div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-background to-transparent"></div>
  </section>

  <!-- Categorías de Servicios -->
  <section id="servicios" class="py-20 px-4 sm:px-6 lg:px-8 bg-background">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1 text-sm font-semibold text-accent bg-accent/10 rounded-full mb-4">Nuestras Soluciones</span>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Servicios de Transformación Digital</h2>
        <p class="text-text-secondary max-w-3xl mx-auto text-lg">
          Ofrecemos un portafolio integral de servicios diseñados para impulsar la innovación y eficiencia en tu negocio mediante la tecnología más avanzada.
        </p>
      </div>

      {/* Navegación por categorías */}
      <div class="flex flex-wrap justify-center gap-4 mb-16">
        {serviceCategories.map(category => (
          <a 
            href={`#${category.id}`}
            class="px-6 py-2 rounded-full border border-accent/20 text-accent hover:bg-accent/10 transition-colors"
          >
            {category.title}
          </a>
        ))}
      </div>

      {/* Contenido de categorías */}
      <div class="space-y-24">
        {serviceCategories.map((category, catIndex) => (
          <div id={category.id} class="scroll-mt-24">
            <div class="flex items-center gap-4 mb-8">
              <div class="text-3xl">{category.icon}</div>
              <h3 class="text-2xl md:text-3xl font-bold text-white">{category.title}</h3>
            </div>
            <p class="text-text-secondary text-lg mb-12 max-w-4xl">
              {category.description}
            </p>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              {category.services.map((service, index) => (
                <div class="group relative overflow-hidden rounded-2xl bg-surface/50 backdrop-blur-sm border border-accent/10 hover:border-accent/30 transition-all duration-300 hover:-translate-y-1 h-full flex flex-col">
                  <div class="h-48 overflow-hidden">
                    <div 
                      class="w-full h-full bg-cover bg-center transition-transform duration-700 group-hover:scale-110"
                      style={`background-image: url('${service.image}');`}
                    ></div>
                  </div>
                  <div class="p-8 flex-1 flex flex-col">
                    <h4 class="text-xl font-bold text-white mb-4">{service.title}</h4>
                    <p class="text-text-secondary mb-6">{service.description}</p>
                    
                    <h5 class="text-sm font-semibold text-accent mb-3">BENEFICIOS PRINCIPALES</h5>
                    <ul class="space-y-2 mb-6">
                      {service.features.slice(0, 4).map(feature => (
                        <li class="flex items-start">
                          <svg class="h-5 w-5 text-accent mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          <span class="text-text-secondary">{feature}</span>
                        </li>
                      ))}
                    </ul>
                    
                    <div class="mt-auto pt-4">
                      <a 
                        href={service.link}
                        class="inline-flex items-center text-accent font-medium hover:text-accent/80 transition-colors"
                      >
                        Ver detalles del servicio
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              ))}
            </div>
            
            {catIndex < serviceCategories.length - 1 && (
              <div class="border-t border-accent/10 my-16"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Testimonios -->
  <section class="py-20 bg-gradient-to-br from-primary/5 to-accent/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1 text-sm font-semibold text-accent bg-accent/10 rounded-full mb-4">Testimonios</span>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Lo que dicen nuestros clientes</h2>
        <p class="text-text-secondary max-w-2xl mx-auto">
          Empresas que han transformado sus operaciones con nuestras soluciones
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div class="bg-surface/50 backdrop-blur-sm rounded-2xl p-8 border border-accent/10 hover:border-accent/30 transition-colors">
            <div class="text-yellow-400 text-2xl mb-4">★★★★★</div>
            <p class="text-text-secondary italic mb-6">"{testimonial.quote}"</p>
            <div class="border-t border-accent/10 pt-6">
              <div class="font-bold text-white">{testimonial.author}</div>
              <div class="text-sm text-text-secondary">{testimonial.position}</div>
              <div class="text-sm text-accent">{testimonial.company}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Estadísticas -->
  <section class="py-20 bg-gradient-to-r from-primary/5 to-accent/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="p-6 bg-surface/50 backdrop-blur-sm rounded-xl border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="text-4xl font-bold text-accent mb-2">+50</div>
          <div class="text-text-secondary">Proyectos Completados</div>
        </div>
        <div class="p-6 bg-surface/50 backdrop-blur-sm rounded-xl border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="text-4xl font-bold text-accent mb-2">+30</div>
          <div class="text-text-secondary">Clientes Satisfechos</div>
        </div>
        <div class="p-6 bg-surface/50 backdrop-blur-sm rounded-xl border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="text-4xl font-bold text-accent mb-2">+15</div>
          <div class="text-text-secondary">Expertos en IA</div>
        </div>
        <div class="p-6 bg-surface/50 backdrop-blur-sm rounded-xl border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="text-4xl font-bold text-accent mb-2">98%</div>
          <div class="text-text-secondary">Tasa de Éxito</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-24 px-4 sm:px-6 lg:px-8 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-primary/10 to-accent/10 -z-10"></div>
    <div class="absolute inset-0 bg-grid-accent/10 [mask-image:linear-gradient(0deg,transparent,white)] -z-10"></div>
    
    <div class="max-w-5xl mx-auto text-center relative z-10">
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-6 leading-tight">
        ¿Listo para llevar tu negocio al siguiente nivel con <span class="text-accent">Inteligencia Artificial</span>?
      </h2>
      <p class="text-xl text-text-secondary mb-10 max-w-3xl mx-auto">
        Nuestro equipo de expertos está listo para ayudarte a implementar soluciones de IA personalizadas que impulsen tus resultados y te den ventaja competitiva.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a 
          href="/contacto" 
          class="px-8 py-4 bg-accent text-white font-medium rounded-full hover:bg-accent/90 transition-all transform hover:scale-105 flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Solicitar Cotización
        </a>
        <a 
          href="#contacto" 
          class="px-8 py-4 border-2 border-accent text-accent font-medium rounded-full hover:bg-accent/10 transition-all flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          Hablar con un Experto
        </a>
      </div>
    </div>
  </section>

  <!-- Proceso de Trabajo -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-background">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1 text-sm font-semibold text-accent bg-accent/10 rounded-full mb-4">Nuestro Proceso</span>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Cómo trabajamos</h2>
        <p class="text-text-secondary max-w-2xl mx-auto">
          Un enfoque metódico para garantizar el éxito de tu proyecto de IA.
        </p>
      </div>

      <div class="grid md:grid-cols-4 gap-8 relative">
        <!-- Línea de tiempo -->
        <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-0.5 bg-accent/20 -translate-x-1/2"></div>
        
        <!-- Paso 1 -->
        <div class="relative z-10 bg-surface/50 backdrop-blur-sm p-6 rounded-2xl border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="w-12 h-12 flex items-center justify-center bg-accent/10 text-accent rounded-full text-xl font-bold mb-4">1</div>
          <h3 class="text-xl font-bold text-white mb-2">Consulta Inicial</h3>
          <p class="text-text-secondary">Analizamos tus necesidades y objetivos para entender cómo podemos ayudarte.</p>
        </div>
        
        <!-- Paso 2 -->
        <div class="relative z-10 bg-surface/50 backdrop-blur-sm p-6 rounded-2xl border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="w-12 h-12 flex items-center justify-center bg-accent/10 text-accent rounded-full text-xl font-bold mb-4">2</div>
          <h3 class="text-xl font-bold text-white mb-2">Diseño de Solución</h3>
          <p class="text-text-secondary">Creamos una propuesta personalizada con un enfoque en resultados medibles.</p>
        </div>
        
        <!-- Paso 3 -->
        <div class="relative z-10 bg-surface/50 backdrop-blur-sm p-6 rounded-2xl border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="w-12 h-12 flex items-center justify-center bg-accent/10 text-accent rounded-full text-xl font-bold mb-4">3</div>
          <h3 class="text-xl font-bold text-white mb-2">Desarrollo</h3>
          <p class="text-text-secondary">Implementamos la solución utilizando las últimas tecnologías en IA y aprendizaje automático.</p>
        </div>
        
        <!-- Paso 4 -->
        <div class="relative z-10 bg-surface/50 backdrop-blur-sm p-6 rounded-2xl border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="w-12 h-12 flex items-center justify-center bg-accent/10 text-accent rounded-full text-xl font-bold mb-4">4</div>
          <h3 class="text-xl font-bold text-white mb-2">Implementación</h3>
          <p class="text-text-secondary">Desplegamos la solución y proporcionamos capacitación y soporte continuo.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonios -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-background to-surface/30">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1 text-sm font-semibold text-accent bg-accent/10 rounded-full mb-4">Testimonios</span>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Lo que dicen nuestros clientes</h2>
        <p class="text-text-secondary max-w-2xl mx-auto">
          Empresas que han confiado en nuestras soluciones de IA.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Testimonio 1 -->
        <div class="bg-surface/50 backdrop-blur-sm rounded-2xl p-8 border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full bg-accent/10 flex items-center justify-center text-xl text-accent mr-4">
              👤
            </div>
            <div>
              <h4 class="font-bold text-white">Carlos M.</h4>
              <p class="text-sm text-text-secondary">CEO, Empresa Tecnológica</p>
            </div>
          </div>
          <p class="text-text-secondary">"La implementación de las soluciones de IA revolucionó nuestra forma de interactuar con los clientes. Increíble experiencia de principio a fin."</p>
        </div>

        <!-- Testimonio 2 -->
        <div class="bg-surface/50 backdrop-blur-sm rounded-2xl p-8 border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full bg-accent/10 flex items-center justify-center text-xl text-accent mr-4">
              👩‍💼
            </div>
            <div>
              <h4 class="font-bold text-white">Ana R.</h4>
              <p class="text-sm text-text-secondary">Directora de Marketing</p>
            </div>
          </div>
          <p class="text-text-secondary">"El equipo de IA nos ayudó a analizar patrones de compra que nunca hubiéramos detectado. Los resultados superaron nuestras expectativas."</p>
        </div>

        <!-- Testimonio 3 -->
        <div class="bg-surface/50 backdrop-blur-sm rounded-2xl p-8 border border-accent/10 hover:border-accent/30 transition-colors">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full bg-accent/10 flex items-center justify-center text-xl text-accent mr-4">
              👨‍💻
            </div>
            <div>
              <h4 class="font-bold text-white">Diego T.</h4>
              <p class="text-sm text-text-secondary">CTO, Startup Fintech</p>
            </div>
          </div>
          <p class="text-text-secondary">"La integración fue impecable y el soporte post-implementación excepcional. Definitivamente los recomiendo para proyectos de IA."</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Última CTA -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-primary/5 to-accent/5">
    <div class="max-w-4xl mx-auto text-center rounded-2xl bg-surface/50 backdrop-blur-sm p-12 border border-accent/10">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">¿Listo para comenzar?</h2>
      <p class="text-xl text-text-secondary mb-8 max-w-2xl mx-auto">
        Agenda una consulta gratuita con nuestro equipo de expertos en IA.
      </p>
      <a href="/contacto" class="inline-block px-8 py-4 bg-accent text-white font-medium rounded-full hover:bg-accent/90 transition-all transform hover:scale-105">
        Contáctanos Ahora
      </a>
    </div>
  </section>
</MainLayout>
