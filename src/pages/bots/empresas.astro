            <h3 class="text-lg font-medium mb-1">Horario de atenci√≥n</h3>
            <p class="text-text-secondary">Lun-Vie: 9:00 - 18:00</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <script>
    // Script para scroll suave en navegaci√≥n interna
    document.addEventListener('DOMContentLoaded', function() {
      // Obtener todos los enlaces internos que comienzan con #
      const internalLinks = document.querySelectorAll('a[href^="#"]');
      
      // A√±adir evento de clic a cada enlace
      internalLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          
          // Obtener el destino del enlace
          const targetId = this.getAttribute('href');
          const targetElement = document.querySelector(targetId);
          
          if (targetElement) {
            // Scroll suave hacia el elemento
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
            
            // Actualizar la URL sin recargar la p√°gina
            history.pushState(null, null, targetId);
          }
        });
      });
    });
    
    // Controlar el bot√≥n de volver arriba
    document.addEventListener('DOMContentLoaded', function() {
      const backToTopButton = document.getElementById('back-to-top');
      
      // Mostrar u ocultar el bot√≥n dependiendo del scroll
      const toggleBackToTopButton = () => {
        if (window.scrollY > 300) {
          backToTopButton.classList.remove('opacity-0', 'invisible', 'translate-y-10');
          backToTopButton.classList.add('opacity-100', 'visible', 'translate-y-0');
        } else {
          backToTopButton.classList.add('opacity-0', 'invisible', 'translate-y-10');
          backToTopButton.classList.remove('opacity-100', 'visible', 'translate-y-0');
        }
      };
      
      // Scroll hacia arriba cuando se hace clic en el bot√≥n
      backToTopButton.addEventListener('click', () => {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
      
      // Controlar visibilidad del bot√≥n al hacer scroll
      window.addEventListener('scroll', toggleBackToTopButton);
      
      // Inicializar
      toggleBackToTopButton();
    });
    
    // Controlar el indicador de progreso de lectura
    document.addEventListener('DOMContentLoaded', function() {
      const progressBar = document.getElementById('reading-progress');
      
      const updateProgressBar = () => {
        const scrollTop = window.scrollY || document.documentElement.scrollTop;
        const scrollHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        const scrollProgress = (scrollTop / scrollHeight) * 100;
        
        progressBar.style.width = `${scrollProgress}%`;
      };
      
      // Actualizar en scroll y resize
      window.addEventListener('scroll', updateProgressBar);
      window.addEventListener('resize', updateProgressBar);
      
      // Inicializar
      updateProgressBar();
    });
    
    // Animaciones de revelaci√≥n al hacer scroll
    document.addEventListener('DOMContentLoaded', function() {
      const animatedElements = document.querySelectorAll('.reveal-animation');
      
      const revealAnimation = () => {
        const windowHeight = window.innerHeight;
        const revealPoint = 150; // Distancia desde la parte inferior de la ventana
        
        animatedElements.forEach(element => {
          const elementTop = element.getBoundingClientRect().top;
          
          if (elementTop < windowHeight - revealPoint) {
            element.classList.add('active');
          } else {
            element.classList.remove('active');
          }
        });
      };
      
      // Ejecutar en carga inicial y al hacer scroll
      window.addEventListener('scroll', revealAnimation);
      revealAnimation();
    });
    
    // Validaci√≥n de formulario mejorada
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('contactForm');
      const inputs = form.querySelectorAll('.validation-input');
      const submitBtn = document.getElementById('submitBtn');
      const successMessage = document.getElementById('successMessage');
      
      // Funci√≥n para validar un campo
      const validateField = (input) => {
        const parent = input.parentElement;
        const errorMessage = input.getAttribute('data-error-message');
        const validationMessage = parent.querySelector('.validation-message');
        const validationIcon = parent.querySelector('.validation-icon');
        
        let isValid = true;
        validationIcon.classList.remove('hidden');
        
        // Comprobar si el campo es requerido y est√° vac√≠o
        if (input.hasAttribute('required') && !input.value.trim()) {
          isValid = false;
        }
        
        // Validaci√≥n espec√≠fica para email
        if (input.type === 'email' && input.value.trim()) {
          const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!emailPattern.test(input.value.trim())) {
            isValid = false;
          }
        }
        
        // Validaci√≥n espec√≠fica para tel√©fono (opcional)
        if (input.type === 'tel' && input.value.trim()) {
          const phonePattern = /^[+]?[(]?[0-9]{3}[)]?[-\s.]?[0-9]{3}[-\s.]?[0-9]{4,6}$/;
          if (!phonePattern.test(input.value.trim())) {
            isValid = false;
          }
        }
        
        // Mostrar estado de validaci√≥n
        if (isValid) {
          input.classList.remove('border-red-500');
          input.classList.add('border-green-500');
          validationIcon.innerHTML = '<svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>';
          validationMessage.classList.add('hidden');
        } else {
          input.classList.remove('border-green-500');
          input.classList.add('border-red-500');
          validationIcon.innerHTML = '<svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path></svg>';
          validationMessage.textContent = errorMessage;
          validationMessage.classList.remove('hidden');
        }
        
        return isValid;
      };
      
      // Validar campos en tiempo real
      inputs.forEach(input => {
        input.addEventListener('blur', () => {
          if (input.value.trim()) {
            validateField(input);
          }
        });
        
        input.addEventListener('input', () => {
          if (input.value.trim()) {
            validateField(input);
          }
        });
      });
      
      // Validar formulario completo al enviar
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        let formIsValid = true;
        
        // Validar todos los campos
        inputs.forEach(input => {
          if (!validateField(input)) {
            formIsValid = false;
          }
        });
        
        // Validar checkbox de privacidad
        const privacyCheckbox = document.getElementById('privacy');
        if (!privacyCheckbox.checked) {
          formIsValid = false;
          alert('Debes aceptar la pol√≠tica de privacidad para continuar.');
        }
        
        // Si el formulario es v√°lido, mostrar mensaje de √©xito
        if (formIsValid) {
          // Aqu√≠ se enviar√≠a el formulario al backend
          // Por ahora, simulamos una respuesta exitosa
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Enviando...';
          
          setTimeout(() => {
            form.reset();
            inputs.forEach(input => {
              const parent = input.parentElement;
              const validationIcon = parent.querySelector('.validation-icon');
              const validationMessage = parent.querySelector('.validation-message');
              
              input.classList.remove('border-green-500', 'border-red-500');
              validationIcon.classList.add('hidden');
              validationMessage.classList.add('hidden');
            });
            
            successMessage.classList.remove('hidden');
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<span>Solicitar Demo Gratis</span><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>';
            
            // Scroll al mensaje de √©xito
            successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }, 2000);
        }
      });
    });
  </script>
