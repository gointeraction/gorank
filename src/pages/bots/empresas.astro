      const animateCounter = (counter) => {
        const target = +counter.getAttribute('data-target');
        const count = +counter.innerText;
        const increment = target / speed;
        
        if (count < target) {
          counter.innerText = Math.ceil(count + increment);
          setTimeout(() => animateCounter(counter), 1);
        } else {
          counter.innerText = target;
        }
      };
      
      // Funci√≥n para verificar si un elemento est√° en el viewport
      const isInViewport = (element) => {
        const rect = element.getBoundingClientRect();
        return (
          rect.top >= 0 &&
          rect.left >= 0 &&
          rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
          rect.right <= (window.innerWidth || document.documentElement.clientWidth)
        );
      };
      
      // Iniciar animaci√≥n cuando los contadores entren en el viewport
      const handleScroll = () => {
        counters.forEach(counter => {
          if (isInViewport(counter) && !counter.classList.contains('animated')) {
            animateCounter(counter);
            counter.classList.add('animated');
          }
        });
      };
      
      // Verificar al cargar la p√°gina y al hacer scroll
      handleScroll();
      window.addEventListener('scroll', handleScroll);
    });
