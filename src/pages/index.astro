<script>
  // Generar estrellas en el fondo
  document.addEventListener('DOMContentLoaded', function() {
    // Verificar preferencias de reducción de movimiento
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    
    if (prefersReducedMotion) {
      document.documentElement.classList.add('reduce-motion');
      return;
    }
    // Crear estrellas en el fondo solo si no hay preferencia de reducción de movimiento
    const starsContainer = document.getElementById('stars-container');
    if (starsContainer && !prefersReducedMotion) {
      for (let i = 0; i < 100; i++) {
        const star = document.createElement('div');
        star.className = 'star';
        const size = Math.random() * 2;
        star.style.width = `${size}px`;
        star.style.height = `${size}px`;
        star.style.left = `${Math.random() * 100}%`;
        star.style.top = `${Math.random() * 100}%`;
        star.style.opacity = Math.random() * 0.8;
        star.style.animationDuration = `${Math.random() * 3 + 2}s`;
        star.style.animationDelay = `${Math.random() * 2}s`;
        starsContainer.appendChild(star);
      }
    }

    // Crear líneas para la red neural
    const neuralNetworkSvg = document.getElementById('neural-network');
    if (neuralNetworkSvg) {
      const points = [];
      // Crear puntos aleatorios
      for (let i = 0; i < 20; i++) {
        points.push({
          x: Math.random() * 100,
          y: Math.random() * 100,
          vx: Math.random() * 0.2 - 0.1,
          vy: Math.random() * 0.2 - 0.1
        });
      }
      
      // Crear líneas entre puntos cercanos
      for (let i = 0; i < points.length; i++) {
        for (let j = i + 1; j < points.length; j++) {
          const dx = points[i].x - points[j].x;
          const dy = points[i].y - points[j].y;
          const distance = Math.sqrt(dx * dx + dy * dy);
          
          if (distance < 30) {
            const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
            line.setAttribute('x1', `${points[i].x}%`);
            line.setAttribute('y1', `${points[i].y}%`);
            line.setAttribute('x2', `${points[j].x}%`);
            line.setAttribute('y2', `${points[j].y}%`);
            line.setAttribute('stroke', 'rgba(0, 240, 255, 0.3)');
            line.setAttribute('stroke-width', '0.5');
            neuralNetworkSvg.appendChild(line);
          }
        }
        
        // Crear nodo (punto)
        const circle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
        circle.setAttribute('cx', `${points[i].x}%`);
        circle.setAttribute('cy', `${points[i].y}%`);
        circle.setAttribute('r', '1');
        circle.setAttribute('fill', 'rgba(0, 240, 255, 0.4)');
        neuralNetworkSvg.appendChild(circle);
      }
    }

    // Efecto 3D para el contenedor del hero
    const hero3DContainer = document.getElementById('hero3DContainer');
    if (hero3DContainer) {
      const heroCard = hero3DContainer.querySelector('.hero-image-card');
      const heroLayers = hero3DContainer.querySelectorAll('.hero-layer');
      const heroElements = hero3DContainer.querySelectorAll('.hero-element');

      // Efecto de movimiento 3D al mover el ratón
      document.addEventListener('mousemove', (e) => {
        const { clientX, clientY } = e;
        const { left, top, width, height } = hero3DContainer.getBoundingClientRect();
        
        // Calcular posición relativa del ratón (de -0.5 a 0.5)
        const xRel = ((clientX - left) / width) - 0.5;
        const yRel = ((clientY - top) / height) - 0.5;
        
        // Aplicar transformación 3D al contenedor principal
        hero3DContainer.style.transform = `
          perspective(1000px) 
          rotateX(${yRel * -10}deg) 
          rotateY(${xRel * 10}deg)
        `;
        
        // Aplicar transformación a la tarjeta principal
        if (heroCard) {
          heroCard.style.transform = `
            translateZ(30px) 
            scale(${1 + Math.abs(xRel) * 0.05 + Math.abs(yRel) * 0.05})
          `;
        }
        
        // Animar capas con diferentes profundidades
        heroLayers.forEach(layer => {
          const depth = parseFloat(layer.getAttribute('data-depth') || 0.1);
          layer.style.transform = `
            translate(${xRel * 50 * depth}px, ${yRel * 50 * depth}px) 
            translateZ(${depth * 100}px)
          `;
        });
        
        // Animar elementos dentro de la imagen
        heroElements.forEach(element => {
          const speed = parseFloat(element.getAttribute('data-speed') || 0.1);
          element.style.transform = `
            translate(${xRel * 30 * speed}px, ${yRel * 30 * speed}px)
          `;
        });
      });
    }

    // Efecto parallax para el fondo y elementos
    window.addEventListener('scroll', () => {
      const scrollY = window.scrollY;
      
      // Aplicar parallax a elementos con la clase .parallax-bg
      document.querySelectorAll('.parallax-bg').forEach(element => {
        const speed = parseFloat(element.getAttribute('data-speed') || 0.2);
        element.style.transform = `translateY(${scrollY * speed}px)`;
      });
      
      // Aplicar parallax a elementos con la clase .parallax-element
      document.querySelectorAll('.parallax-element').forEach(element => {
        const speed = parseFloat(element.getAttribute('data-speed') || 0.2);
        element.style.transform = `translateY(${scrollY * speed}px)`;
      });
    });

    // Iniciar contadores
    const counters = document.querySelectorAll('.counter-value');
    const observerOptions = {
      threshold: 0.5,
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const counter = entry.target;
          const target = parseInt(counter.getAttribute('data-target'));
          const duration = 2000; // ms
          const frameDuration = 1000/60; // 60fps
          const totalFrames = Math.round(duration / frameDuration);
          let frame = 0;
          
          const animate = () => {
            frame++;
            const progress = frame / totalFrames;
            const currentCount = Math.round(progress * target);
            counter.textContent = currentCount;
            
            if (frame < totalFrames) {
              requestAnimationFrame(animate);
            }
          };
          
          animate();
          observer.unobserve(counter);
        }
      });
    }, observerOptions);

    counters.forEach(counter => {
      observer.observe(counter);
    });
    
    // Efectos 3D para las tarjetas de servicios
    const initServiceCards3DEffect = () => {
      const cards = document.querySelectorAll('.service-card.card-3d');
      const container = document.querySelector('.perspective-container');
      
      if (!container || cards.length === 0) return;
      
      // Aplicar perspectiva al contenedor
      container.style.perspective = '1500px';
      
      cards.forEach(card => {
        card.addEventListener('mousemove', (e) => {
          const rect = card.getBoundingClientRect();
          const centerX = rect.left + rect.width / 2;
          const centerY = rect.top + rect.height / 2;
          const mouseX = e.clientX - centerX;
          const mouseY = e.clientY - centerY;
          
          // Calcular rotación basada en la posición del mouse
          const rotateX = mouseY / -10;
          const rotateY = mouseX / 10;
          
          // Aplicar transformación 3D
          card.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateZ(10px)`;
          
          // Efecto de brillo personalizado
          const shine = card.querySelector('.card-shine');
          if (shine) {
            shine.style.background = `radial-gradient(
              circle at ${e.clientX - rect.left}px ${e.clientY - rect.top}px, 
              rgba(255,255,255,0.2) 0%, 
              rgba(255,255,255,0) 80%
            )`;
          }
        });
        
        // Restablecer posición al salir
        card.addEventListener('mouseleave', () => {
          card.style.transform = 'rotateX(0) rotateY(0) translateZ(0)';
          const shine = card.querySelector('.card-shine');
          if (shine) {
            shine.style.background = 'none';
          }
        });
      });
    };
    
    // Crear red de líneas de conexión para servicios
    const createServiceNetwork = () => {
      const networkSvg = document.getElementById('services-network');
      if (!networkSvg) return;
      
      const cards = document.querySelectorAll('.service-card');
      if (cards.length < 2) return;
      
      // Limpiar SVG existente
      networkSvg.innerHTML = '';
      
      // Crear conexiones aleatorias entre tarjetas
      for (let i = 0; i < cards.length; i++) {
        const rect1 = cards[i].getBoundingClientRect();
        
        for (let j = i + 1; j < cards.length; j++) {
          const rect2 = cards[j].getBoundingClientRect();
          
          // Calcular puntos de conexión
          const x1 = rect1.left + rect1.width / 2 - networkSvg.getBoundingClientRect().left;
          const y1 = rect1.top + rect1.height / 2 - networkSvg.getBoundingClientRect().top;
          const x2 = rect2.left + rect2.width / 2 - networkSvg.getBoundingClientRect().left;
          const y2 = rect2.top + rect2.height / 2 - networkSvg.getBoundingClientRect().top;
          
          // Dibujar línea entre tarjetas
          const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
          line.setAttribute('x1', x1);
          line.setAttribute('y1', y1);
          line.setAttribute('x2', x2);
          line.setAttribute('y2', y2);
          line.setAttribute('stroke', 'rgba(255, 255, 255, 0.1)');
          line.setAttribute('stroke-width', '1');
          line.setAttribute('stroke-dasharray', '4 4');
          
          networkSvg.appendChild(line);
        }
      }
    };
    
    // Inicializar animaciones de partículas en iconos
    const initParticleEffects = () => {
      const iconParticles = document.querySelectorAll('.icon-particles, .icon-particles-alt, .icon-particles-purple');
      
      iconParticles.forEach(el => {
        // Generar partículas aleatorias
        for (let i = 0; i < 8; i++) {
          const particle = document.createElement('div');
          particle.classList.add('particle');
          
          // Posición aleatoria
          const posX = Math.random() * 100;
          const posY = Math.random() * 100;
          const size = 1 + Math.random() * 3;
          const animDuration = 2 + Math.random() * 3;
          
          // Estilo personalizado para cada tipo de partícula
          let color = 'rgba(0, 240, 255, 0.7)';
          if (el.classList.contains('icon-particles-alt')) {
            color = 'rgba(100, 100, 255, 0.7)';
          } else if (el.classList.contains('icon-particles-purple')) {
            color = 'rgba(142, 68, 173, 0.7)';
          }
          
          particle.style.cssText = `
            position: absolute;
            top: ${posY}%;
            left: ${posX}%;
            width: ${size}px;
            height: ${size}px;
            background-color: ${color};
            border-radius: 50%;
            opacity: 0.7;
            animation: float ${animDuration}s infinite ease-in-out;
          `;
          
          el.appendChild(particle);
        }
      });
    };
    
    // Efectos de revelación al hacer scroll
    const initRevealEffects = () => {
      const elements = document.querySelectorAll('.reveal-block, .reveal-text, .reveal-text-delay, .reveal-content-delay');
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Aplicar delay personalizado si está especificado
            const delay = entry.target.dataset.delay || 0;
            setTimeout(() => {
              entry.target.classList.add('revealed');
              entry.target.classList.remove('not-revealed');
            }, delay);
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.15 });
      
      elements.forEach(el => {
        observer.observe(el);
        // Establecer estado inicial como no revelado
        el.classList.add('not-revealed');
      });
    };
    
    // Inicializar todos los efectos de la sección de servicios
    initServiceCards3DEffect();
    createServiceNetwork();
    initParticleEffects();
    initRevealEffects();
    
    // Actualizar red de conexiones al redimensionar la ventana
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        createServiceNetwork();
      }, 250);
    });
  });
</script>

