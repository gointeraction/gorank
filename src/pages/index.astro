---
/*
  Archivo: index.astro
  Propósito: Página principal del sitio web. Estructura y presenta el hero, integraciones y servicios destacados.
  Imports:
    - MainLayout: Layout base de la web.
    - Icon: Componente de íconos SVG reutilizables.
    - HomeServiceSlider: (no usado directamente aquí, pero disponible para sliders de servicios).
    - IntegrationsShowcase: Sección premium de integraciones con apps externas.
*/
import MainLayout from '../layouts/MainLayout.astro';
import { Icon } from 'astro-icon/components';
import HomeServiceSlider from '../components/HomeServiceSlider.astro';
import IntegrationsShowcase from '../components/IntegrationsShowcase.astro';
import HeroWaveShowcase from '../components/HeroWaveShowcase.astro';
import TestimonialsCarousel from '../components/TestimonialsCarousel.astro';
---

<MainLayout title="Inicio">
  <!-- Hero Section con efectos 3D y parallax avanzados -->
  <section class="relative min-h-[95vh] flex items-center justify-center overflow-hidden pt-1" aria-labelledby="hero-heading">
    <h1 id="hero-heading" class="sr-only">Soluciones de Inteligencia Artificial para tu negocio</h1>
    <!-- Fondo dinámico con efecto parallax -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-background via-surface/80 to-primary/5"></div>
      <div class="absolute inset-0 bg-[url('/img/grid-pattern.svg')] bg-center opacity-10 parallax-bg" data-speed="-0.05"></div>
      
      <!-- Estrellas/puntos brillantes animados -->
      <div id="stars-container" class="absolute inset-0 overflow-hidden"></div>
      
      <!-- Líneas de conexión estilo neural -->
      <div class="absolute inset-0 opacity-20" aria-hidden="true">
        <svg class="w-full h-full" id="neural-network" aria-hidden="true"></svg>
      </div>
    </div>
    
    <!-- Precargar recursos críticos -->
    <link rel="preload" href="/ai-hero.webp" as="image" type="image/webp">
    <link rel="preload" href="/img/grid-pattern.svg" as="image" type="image/svg+xml">
    
    <!-- Partículas animadas con efecto 3D -->
    <div class="absolute inset-0 overflow-hidden perspective-3d" aria-hidden="true">
      <div class="absolute -top-10 -left-10 w-72 h-72 bg-accent/20 rounded-full mix-blend-multiply filter blur-3xl animate-float-slow parallax-element" data-speed="0.2"></div>
      <div class="absolute top-1/3 -right-10 w-96 h-96 bg-primary/20 rounded-full mix-blend-multiply filter blur-3xl animate-float-slow-reverse parallax-element" data-speed="0.3"></div>
      <div class="absolute -bottom-20 left-1/3 w-80 h-80 bg-accent/20 rounded-full mix-blend-multiply filter blur-3xl animate-pulse-slow parallax-element" data-speed="0.25"></div>
      
      <!-- Partículas flotantes adicionales -->
      <div class="particle absolute w-4 h-4 rounded-full bg-accent/30 top-1/4 left-1/4 animate-float-random"></div>
      <div class="particle absolute w-3 h-3 rounded-full bg-primary/40 top-3/4 right-1/3 animate-float-random-delay"></div>
      <div class="particle absolute w-2 h-2 rounded-full bg-white/30 bottom-1/3 right-1/4 animate-float-random"></div>
      <div class="particle absolute w-5 h-5 rounded-full bg-accent/20 top-1/2 left-1/2 animate-float-random-delay"></div>
    </div>

    <div class="relative container mx-auto px-4 pt-0 md:pt-4 pb-6 md:pb-12 flex flex-col lg:flex-row items-center justify-between gap-4 z-10">
      <!-- Contenido de texto con animaciones avanzadas -->
      <div class="flex-1 text-center lg:text-left max-w-3xl mx-auto lg:mx-0 perspective-container">
        <!-- Badge con efecto 3D animado -->
        <div class="inline-flex items-center gap-1 mb-4 px-3 py-1.5 rounded-full bg-accent/10 border border-accent/20 text-accent text-xs font-medium transform hover:scale-105 transition-transform animate-float-slow">
          <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-accent"></span>
          </span>
          <span class="ml-1 tracking-wide uppercase">Tecnología de Vanguardia</span>
        </div>
        
        <!-- Título con efecto de revelación y animación 3D -->
        <h1 class="hero-title text-4xl md:text-6xl lg:text-7xl font-extrabold mb-4 leading-tight transform-gpu">
          <span class="block reveal-text text-transparent bg-clip-text bg-gradient-to-r from-white via-white to-accent/80 animate-gradient-text">Potencia tu negocio con</span>
          <span class="block reveal-text-delay text-transparent bg-clip-text bg-gradient-to-r from-accent via-accent/90 to-primary animate-gradient-text">Inteligencia Artificial</span>
        </h1>
        
        <!-- Subtítulo con animación de revelación -->
        <p class="text-base md:text-lg text-gray-300 mb-8 max-w-2xl mx-auto lg:mx-0 leading-relaxed reveal-content">
          Soluciones de IA personalizadas que <span class="text-accent font-medium">impulsan la innovación</span>, automatizan procesos y generan <span class="text-accent font-medium">resultados medibles</span> para tu empresa con tecnología de última generación.        
        </p>
        
        <!-- Contador de estadísticas animado -->
        <div class="grid grid-cols-3 gap-3 mb-8 reveal-content-delay">
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl py-3 px-2 transform hover:scale-105 transition-all duration-300">
            <div class="text-2xl font-bold text-accent mb-1">
              <span class="counter-value" data-target="98">0</span>%
            </div>
            <div class="text-xs text-white/70">Satisfacción</div>
          </div>
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl py-3 px-2 transform hover:scale-105 transition-all duration-300">
            <div class="text-2xl font-bold text-accent mb-1">+<span class="counter-value" data-target="500">0</span></div>
            <div class="text-xs text-white/70">Proyectos</div>
          </div>
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl py-3 px-2 transform hover:scale-105 transition-all duration-300">
            <div class="text-2xl font-bold text-accent mb-1">+<span class="counter-value" data-target="50">0</span></div>
            <div class="text-xs text-white/70">Empresas</div>
          </div>
        </div>
        
        <!-- Botones con efectos 3D y animaciones avanzadas -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center lg:justify-start reveal-content-delay-2">
          <a 
            href="/contacto" 
            aria-label="Contáctanos para más información"
            class="relative group inline-flex items-center justify-center px-10 py-5 overflow-hidden font-bold text-lg rounded-2xl bg-gradient-to-r from-accent to-primary hover:from-primary hover:to-accent transition-all duration-500 hover:-translate-y-1 hover:shadow-[0_15px_30px_-5px_rgba(0,240,255,0.5)] transform-gpu focus:outline-none focus:ring-4 focus:ring-accent/50">
            <span class="relative z-10 flex items-center gap-2 text-white">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              <strong>Comienza ahora</strong>
            </span>
            <span class="absolute inset-0 bg-white/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-2xl"></span>
            <!-- Efecto de partículas en hover -->
            <span class="absolute inset-0 -z-10 group-hover:z-0">
              <span class="absolute inset-0 transform group-hover:scale-105 transition-transform duration-500"></span>
            </span>
          </a>
          
          <a 
            href="#servicios" 
            class="relative group inline-flex items-center justify-center px-10 py-5 font-medium text-white text-lg border-2 border-white/20 hover:border-accent/50 rounded-2xl hover:text-accent transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:bg-accent/5 overflow-hidden transform-gpu">
            <span class="relative z-10 flex items-center gap-2">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <strong>Ver nuestros servicios</strong>
            </span>
            <!-- Efecto de luz que recorre el botón -->
            <span class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/10 to-transparent"></span>
          </a>
        </div>
        
        <!-- Badges con efectos de revelación escalonados -->
        <div class="mt-12 flex flex-wrap justify-center lg:justify-start gap-4 reveal-content-delay-3">
          <div class="badge-item flex items-center gap-2 bg-white/5 backdrop-blur-sm px-4 py-2 rounded-full text-sm text-white/80 border border-white/5 transform hover:scale-105 transition-all hover:border-accent/30 hover:bg-accent/5">
            <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Implementación rápida</span>
          </div>
          <div class="badge-item flex items-center gap-2 bg-white/5 backdrop-blur-sm px-4 py-2 rounded-full text-sm text-white/80 border border-white/5 transform hover:scale-105 transition-all hover:border-accent/30 hover:bg-accent/5">
            <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Soporte 24/7</span>
          </div>
          <div class="badge-item flex items-center gap-2 bg-white/5 backdrop-blur-sm px-4 py-2 rounded-full text-sm text-white/80 border border-white/5 transform hover:scale-105 transition-all hover:border-accent/30 hover:bg-accent/5">
            <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Resultados garantizados</span>
          </div>
          <div class="badge-item flex items-center gap-2 bg-white/5 backdrop-blur-sm px-4 py-2 rounded-full text-sm text-white/80 border border-white/5 transform hover:scale-105 transition-all hover:border-accent/30 hover:bg-accent/5">
            <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Tecnología de punta</span>
          </div>
        </div>
      </div>
      
      <!-- Imagen del héroe con efecto 3D interactivo -->
      <div class="relative flex-1 max-w-2xl mt-12 lg:mt-0 reveal-content">
        <!-- Contenedor 3D avanzado -->
        <div class="hero-3d-container" id="hero3DContainer">
          <!-- Marco principal con efecto de profundidad -->
          <div class="relative z-20 rounded-3xl overflow-hidden shadow-[0_8px_32px_rgba(0,0,0,0.3)] border-4 border-white/10 bg-gradient-to-br from-surface to-surface/80 backdrop-blur-sm hero-image-card">
            <!-- Capa de brillos y reflejos 3D -->
            <div class="absolute inset-0 opacity-40 mix-blend-overlay overflow-hidden hero-glare"></div>
            
          <!-- Imagen del dashboard de IA -->
          <img 
            src="/img/Dashboard.png" 
            alt="Dashboard de IA avanzada con análisis en tiempo real" 
            class="w-full h-auto object-cover rounded-xl"
            loading="eager"
            width="1200"
  height="900"
  fetchpriority="high"
/>
            

            <!-- Overlay con efecto de profundidad y brillo -->

            <div class="absolute inset-0 bg-gradient-to-tr from-accent/10 to-primary/10 mix-blend-overlay opacity-70 hero-overlay">
              <!-- SVG decorativo con efectos de profundidad -->
              <svg class="absolute inset-0 w-full h-full opacity-40" viewBox="0 0 1000 800" preserveAspectRatio="xMidYMid slice">
                <!-- Rejilla de puntos con animación -->
                <g class="grid-dots">
                  <pattern id="dotPattern" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
                    <circle cx="20" cy="20" r="1" fill="rgba(255,255,255,0.5)" class="animate-pulse-slow" />
                  </pattern>
                  <rect width="100%" height="100%" fill="url(#dotPattern)" />
                </g>
                
                <!-- Líneas de conexión flotantes -->
                <g class="connection-lines">
                  <path d="M100,100 C200,150 300,50 400,200 C500,300 600,200 700,250 C800,300 900,200 950,300" stroke="rgba(0,240,255,0.2)" fill="none" stroke-width="1" class="animate-float-slow" />
                  <path d="M50,200 C150,250 250,150 350,300 C450,400 550,300 650,350 C750,400 850,300 900,400" stroke="rgba(100,100,255,0.2)" fill="none" stroke-width="1" class="animate-float-slow-reverse" style="animation-delay: 0.5s" />
                </g>
                
                <!-- Elementos gráficos flotantes -->
                <g class="floating-elements">
                  <circle cx="200" cy="150" r="30" fill="rgba(0,240,255,0.05)" class="animate-float-slow" />
                  <circle cx="700" cy="250" r="40" fill="rgba(100,100,255,0.05)" class="animate-float-slow-reverse" />
                  <rect x="400" y="200" width="50" height="50" rx="10" fill="rgba(255,255,255,0.05)" transform="rotate(15)" class="animate-float-slow" />
                </g>
                
                <!-- Nodos de datos con brillo -->
                <g class="data-nodes">
                  <circle cx="300" cy="200" r="5" fill="rgba(0,240,255,0.3)" class="animate-pulse" />
                  <circle cx="500" cy="300" r="4" fill="rgba(100,100,255,0.3)" class="animate-pulse" style="animation-delay: 0.3s" />
                  <circle cx="700" cy="150" r="6" fill="rgba(255,255,255,0.3)" class="animate-pulse" style="animation-delay: 0.6s" />
                </g>
              </svg>
            </div>
            
            <!-- Elementos flotantes interactivos dentro de la imagen -->
            <div class="absolute top-6 left-8 w-10 h-10 rounded-full bg-accent/30 backdrop-blur-md border border-accent/40 animate-pulse-slow hero-element" data-speed="0.05"></div>
            <div class="absolute bottom-8 right-12 w-12 h-12 rounded-full bg-primary/30 backdrop-blur-md border border-primary/40 animate-float-slow hero-element" data-speed="-0.08"></div>
          </div>
          
          <!-- Capas de profundidad con efecto parallax -->
          <div class="absolute -bottom-10 -left-10 w-40 h-40 bg-accent/10 rounded-3xl backdrop-blur-sm border border-accent/20 z-10 animate-float-slow hero-layer" data-depth="0.2"></div>
          <div class="absolute -top-10 -right-10 w-36 h-36 bg-primary/10 rounded-3xl backdrop-blur-sm border border-primary/20 z-0 animate-float-slow-reverse hero-layer" data-depth="0.3"></div>
          
          <!-- Capas geométricas decorativas con animación -->
          <div class="absolute top-1/3 right-1/3 w-20 h-20 bg-accent/5 rotate-45 rounded-lg backdrop-blur-sm border border-accent/10 -z-10 animate-spin-slow hero-layer" data-depth="0.15"></div>
          <div class="absolute bottom-1/3 left-1/4 w-16 h-16 bg-primary/5 rounded-full backdrop-blur-sm border border-primary/10 -z-10 animate-float hero-layer" data-depth="0.25"></div>
        </div>
        
        <!-- Badges flotantes con información -->
        <div class="absolute -bottom-4 right-0 bg-gradient-to-r from-accent to-primary text-white px-4 py-2 rounded-full text-sm font-medium shadow-xl flex items-center gap-2 animate-float-slow z-30">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Análisis en tiempo real
        </div>
        
        <div class="absolute -top-4 left-0 bg-white/10 backdrop-blur-md text-white px-4 py-2 rounded-full text-sm font-medium shadow-lg flex items-center gap-2 animate-float-slow-reverse z-30 border border-white/20">
          <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
          Tecnología segura
        </div>
        
        <!-- Burbujas de datos flotantes -->
        <div class="absolute -left-2 top-1/3 flex items-center gap-2 bg-accent/90 text-white px-3 py-1.5 rounded-lg text-xs font-medium shadow-lg animate-float-slow z-20">
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
          </svg>
          +45% Rendimiento
        </div>
        
        <div class="absolute -right-2 top-2/3 flex items-center gap-2 bg-primary/90 text-white px-3 py-1.5 rounded-lg text-xs font-medium shadow-lg animate-float-slow-reverse z-20">
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Datos inteligentes
        </div>
      </div>
    </div>
    
    <!-- Scroll down indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <a href="#servicios" class="text-text-secondary hover:text-accent transition-colors">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </a>
    </div>
  </section>
  


<!--
  SECCIÓN DE INTEGRACIONES
  Muestra logos y explicación de integraciones con más de 40 apps populares.
  Este bloque utiliza el componente IntegrationsShowcase, que incluye SVG, logos y texto premium.
-->
<IntegrationsShowcase />

<!--
  SERVICIOS DESTACADOS
  Grid de servicios principales ofrecidos por la empresa.
  Cada tarjeta tiene ícono, título, descripción y CTA específico.
  Estilos premium y animaciones de hover.
-->
<!-- SERVICIOS DESTACADOS CON EFECTOS 3D Y PARALLAX -->
<section id="servicios" class="relative py-20 md:py-28 overflow-hidden scroll-mt-16">
  <!-- Fondo con parallax y efectos visuales -->
  <div class="absolute inset-0 -z-10" aria-hidden="true">
    <div class="absolute inset-0 bg-gradient-to-br from-surface via-surface/95 to-background/90"></div>
    <div class="absolute inset-0 bg-[url('/img/grid-pattern.svg')] opacity-5 parallax-bg" data-speed="-0.03" aria-hidden="true"></div>
    
    <!-- Partículas decorativas con efecto parallax -->
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-accent/5 rounded-full mix-blend-multiply filter blur-3xl parallax-element" data-speed="0.1"></div>
    <div class="absolute bottom-1/3 right-1/4 w-80 h-80 bg-primary/5 rounded-full mix-blend-multiply filter blur-3xl parallax-element" data-speed="0.15"></div>
    
    <!-- Líneas de conexión para servicios interconectados -->
    <div class="absolute inset-0 opacity-10">
    </div>
  </div>
  
  <div class="relative container mx-auto z-10 px-4 md:px-6">
      <!-- Encabezado con animaciones de revelación -->
      <div class="text-center max-w-4xl mx-auto mb-24 md:mb-32 reveal-block" aria-label="Sección de servicios">
        <!-- Badge animada con mejor accesibilidad -->
        <div class="inline-flex items-center gap-2 mb-6 px-4 py-2 rounded-full bg-accent/10 backdrop-blur-sm border border-accent/20 transform hover:scale-105 transition-transform animate-float-slow" aria-label="Nuestras soluciones">
          <div class="w-1.5 h-1.5 rounded-full bg-accent animate-pulse" aria-hidden="true"></div>
          <span class="text-accent font-medium text-xs md:text-sm tracking-wider uppercase">Nuestras Soluciones</span>
        </div>
        
        <!-- Título con mejor contraste y accesibilidad -->
        <h2 class="text-3xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight reveal-text" aria-label="Servicios de Inteligencia Artificial">
          <span class="text-white">Servicios de </span>
          <span class="bg-gradient-to-r from-accent via-primary to-accent bg-clip-text text-transparent animate-gradient-text">Inteligencia Artificial</span>
        </h2>
        
        <!-- Subtítulo mejorado con mejor contraste y accesibilidad -->
        <p class="text-text-secondary text-lg md:text-2xl max-w-3xl mx-auto leading-relaxed reveal-text-delay" aria-label="Descripción de servicios">
          Soluciones de IA personalizadas que <span class="text-accent/90">impulsan la innovación</span> y transforman datos en <span class="text-accent/90">decisiones estratégicas</span> para tu negocio.
        </p>
        
        <!-- Botón de llamada a la acción mejorado -->
        <div class="mt-12 flex justify-center reveal-content-delay">
          <a href="#servicios" class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-accent/10 hover:bg-accent/20 transition-colors duration-300 text-white hover:text-accent/90 text-sm font-medium">
            <span>Explorar servicios</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
