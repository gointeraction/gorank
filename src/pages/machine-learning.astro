---
import MainLayout from '../layouts/MainLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

// Datos para las tarjetas de servicios
const servicios = [
  {
    titulo: "Mantenimiento Predictivo",
    descripcion: "Reduzca pérdidas financieras mediante análisis predictivos que anticipan el mantenimiento necesario para herramientas y máquinas.",
    icono: "ph:gear-six"
  },
  {
    titulo: "Detección de Fraudes",
    descripcion: "Algoritmos inteligentes que detectan y previenen fraudes mediante el análisis de patrones y anomalías en conjuntos de datos.",
    icono: "ph:shield-check"
  },
  {
    titulo: "Previsión de Demanda",
    descripcion: "Análisis de datos de mercado en tiempo real para revelar tendencias estacionales y realizar predicciones de ventas precisas.",
    icono: "ph:chart-line-up"
  },
  {
    titulo: "Precios Dinámicos",
    descripcion: "Modelos de machine learning que ajustan automáticamente precios según la demanda actual del mercado.",
    icono: "ph:currency-dollar"
  },
  {
    titulo: "Chatbots Inteligentes",
    descripcion: "Asistentes virtuales potenciados por IA que ofrecen soporte al cliente 24/7 con respuestas precisas y naturales.",
    icono: "ph:chat-circle-text"
  },
  {
    titulo: "Recomendaciones Personalizadas",
    descripcion: "Sistemas que analizan el comportamiento del usuario para ofrecer recomendaciones altamente relevantes.",
    icono: "ph:sparkle"
  }
];

// Datos para los beneficios
const beneficios = [
  {
    titulo: "Automatización de Rutinas",
    descripcion: "Libere tiempo y recursos automatizando tareas repetitivas y procesos operativos.",
    icono: "ph:robot"
  },
  {
    titulo: "Análisis de Datos Avanzado",
    descripcion: "Descubra insights ocultos y patrones complejos en sus datos empresariales.",
    icono: "ph:chart-bar"
  },
  {
    titulo: "Experiencia del Cliente",
    descripcion: "Personalice experiencias y ofrezca soporte más inteligente y eficiente.",
    icono: "ph:users"
  },
  {
    titulo: "Seguridad Mejorada",
    descripcion: "Detecte y prevenga amenazas de seguridad con algoritmos inteligentes.",
    icono: "ph:shield-check"
  }
];
---

<MainLayout title="Inteligencia Artificial y Machine Learning | Soluciones Avanzadas">
  <Breadcrumbs paths={[
    {title: "Inicio", url: "/"},
    {title: "Servicios", url: "/servicios"},
    {title: "Machine Learning"}
  ]} />
  <div class="container mx-auto space-y-16 px-4">
    <!-- Hero Section Mejorado con Animaciones 3D y Efectos Visuales -->
    <section class="relative overflow-hidden min-h-[90vh] flex items-center">
      <!-- Elementos decorativos y efectos de fondo -->
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <!-- Gradiente de fondo animado -->
        <div class="absolute inset-0 bg-gradient-to-br from-background via-surface/70 to-background">
          <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-primary/20 via-transparent to-transparent opacity-40"></div>
          <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-accent/20 via-transparent to-transparent opacity-40"></div>
        </div>
        
        <!-- Patrón de grid -->
        <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
        
        <!-- Objetos 3D flotantes (simulados con divs) -->
        <div class="absolute w-64 h-64 top-1/4 right-[10%] bg-accent/5 rounded-full filter blur-3xl animate-pulse-slow"></div>
        <div class="absolute w-96 h-96 bottom-1/4 left-[5%] bg-primary/5 rounded-full filter blur-3xl animate-pulse-slow animation-delay-2000"></div>
        
        <!-- Partículas flotantes -->
        <div class="particles-container absolute inset-0 overflow-hidden">
          <div class="particle absolute w-2 h-2 rounded-full bg-accent/30" style="top: 15%; left: 20%; animation: float 8s ease-in-out infinite"></div>
          <div class="particle absolute w-3 h-3 rounded-full bg-accent/20" style="top: 70%; left: 85%; animation: float 12s ease-in-out infinite 1s"></div>
          <div class="particle absolute w-1 h-1 rounded-full bg-primary/40" style="top: 35%; left: 50%; animation: float 10s ease-in-out infinite 0.5s"></div>
          <div class="particle absolute w-2 h-2 rounded-full bg-primary/30" style="top: 80%; left: 10%; animation: float 9s ease-in-out infinite 2s"></div>
          <div class="particle absolute w-1 h-1 rounded-full bg-accent/40" style="top: 25%; left: 80%; animation: float 11s ease-in-out infinite 1.5s"></div>
        </div>
        
        <!-- Formas geométricas 3D animadas -->
        <div class="absolute top-[20%] right-[15%] w-20 h-20 rotate-45 border-2 border-accent/20 transform-gpu animate-float animation-delay-1000"></div>
        <div class="absolute bottom-[30%] left-[20%] w-16 h-16 rounded-lg border-2 border-primary/20 transform-gpu animate-float animation-delay-3000"></div>
      </div>
      
      <div class="container mx-auto px-4 py-20 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Texto del Hero -->
          <div class="reveal-animation-left">
            <div class="inline-flex items-center gap-1 mb-6 px-3 py-1 rounded-full bg-accent/10 border border-accent/20 text-accent text-sm font-medium">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <span>MACHINE LEARNING AVANZADO</span>
            </div>
            
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold mb-6 leading-tight">
              Potencia tu negocio con <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-primary animate-gradient-x">Machine Learning</span>
            </h1>
            
            <p class="text-xl text-text-secondary mb-8 max-w-xl leading-relaxed">
              Transformamos datos en decisiones inteligentes con algoritmos avanzados de IA personalizados para impulsar tu crecimiento empresarial y resolver problemas complejos.
            </p>
            
            <div class="flex flex-wrap gap-4">
              <a href="#contacto" class="btn-primary group">
                <span>Solicitar Demostración</span>
                <svg class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
              
              <a href="#servicios" class="btn-secondary group">
                <span>Ver Servicios</span>
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </a>
            </div>
            
            <!-- Estadísticas Rápidas -->
            <div class="grid grid-cols-3 gap-6 mt-12">
              <div class="stat-item">
                <div class="stat-value" id="stat-projects" data-value="98" data-suffix="%">0%</div>
                <div class="stat-label">Precisión Media</div>
              </div>
              
              <div class="stat-item">
                <div class="stat-value" id="stat-roi" data-value="320" data-suffix="%">0%</div>
                <div class="stat-label">ROI Promedio</div>
              </div>
              
              <div class="stat-item">
                <div class="stat-value" id="stat-clients" data-value="45" data-suffix="+">0+</div>
                <div class="stat-label">Proyectos ML</div>
              </div>
            </div>
          </div>
          
          <!-- Imagen/Visualización 3D -->
          <div class="relative reveal-animation-right">
            <div class="hero-image-container relative z-10 perspective">
              <img 
                src="https://images.unsplash.com/photo-1535378620166-273708d44e4c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1169&q=80" 
                alt="Machine Learning Avanzado" 
                class="w-full h-auto rounded-2xl shadow-2xl transform-gpu hover:rotate-y-12 hover:scale-105 transition-transform duration-700"
              />
              
              <!-- Elementos decorativos flotantes alrededor de la imagen -->
              <div class="absolute -top-4 -right-4 bg-accent text-white px-4 py-2 rounded-lg shadow-lg transform rotate-3 animate-float">
                <span class="font-semibold">Deep Learning</span>
              </div>
              
              <div class="absolute -bottom-3 -left-3 bg-primary text-white px-4 py-2 rounded-lg shadow-lg transform -rotate-2 animate-float animation-delay-1000">
                <span class="font-semibold">Neural Networks</span>
              </div>
            </div>
            
            <!-- Patrón decorativo detrás de la imagen -->
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full rounded-full bg-accent/5 filter blur-3xl -z-10"></div>
          </div>
        </div>
      </div>
    </section>
    <!-- Sección de Servicios con Tarjetas 3D Interactivas -->
    <section id="servicios" class="py-16 md:py-24 relative overflow-hidden">
      <!-- Elementos decorativos de fondo -->
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-accent/5 via-transparent to-transparent opacity-60"></div>
        <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
      </div>
      
      <div class="container mx-auto px-4">
        <div class="text-center mb-16 reveal-animation">
          <div class="inline-flex items-center gap-1 mb-4 px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary text-sm font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <span>SOLUCIONES AVANZADAS</span>
          </div>
          
          <h2 class="text-4xl md:text-5xl font-bold mb-6 reveal-animation delay-100">
            Soluciones de <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-primary">Machine Learning</span>
          </h2>
          
          <p class="text-xl text-text-secondary max-w-3xl mx-auto mb-4 reveal-animation delay-200">
            Tecnología de vanguardia adaptada a las necesidades específicas de tu negocio para transformar tus datos en ventajas competitivas reales.
          </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {servicios.map((servicio, index) => (
            <div class="service-card perspective reveal-animation" data-tilt data-tilt-max="10" data-delay={index * 100}>
              <div class="service-card-inner relative p-8 bg-surface/50 backdrop-blur-lg border border-white/5 rounded-2xl overflow-hidden group transition-all duration-500 hover:shadow-[0_20px_70px_-10px_rgba(34,197,94,0.15)] hover:border-accent/20 hover:-translate-y-1 transform-gpu">
                <!-- Degradado flotante en hover -->
                <div class="absolute inset-0 bg-gradient-to-r from-accent/10 to-primary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                
                <div class="relative z-10">
                  <!-- Icono animado -->
                  <div class="service-icon-container mb-6">
                    <div class="service-icon bg-accent/10 w-16 h-16 rounded-xl flex items-center justify-center transition-all duration-500 group-hover:shadow-[0_0_30px_rgba(34,197,94,0.3)]">
                      {servicio.icono === 'ph:gear-six' && (
                        <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                      )}
                      {servicio.icono === 'ph:shield-check' && (
                        <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                      )}
                      {servicio.icono === 'ph:chart-line-up' && (
                        <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                      )}
                      {servicio.icono === 'ph:currency-dollar' && (
                        <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      )}
                      {servicio.icono === 'ph:chat-circle-text' && (
                        <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                        </svg>
                      )}
                      {servicio.icono === 'ph:sparkle' && (
                        <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                        </svg>
                      )}
                      {servicio.icono === 'ph:robot' && (
                        <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                      )}
                      {servicio.icono === 'ph:chart-bar' && (
                        <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                      )}
                      {servicio.icono === 'ph:users' && (
                        <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                      )}
                    </div>
                  </div>
                  
                  <h3 class="text-2xl font-bold text-white mb-4 transition-all duration-300 group-hover:text-accent">
                    {servicio.titulo}
                  </h3>
                  
                  <p class="text-text-secondary mb-6">
                    {servicio.descripcion}
                  </p>
                  
                  <!-- Badge flotante con tecnología -->
                  <div class="absolute top-4 right-4 px-2 py-1 bg-accent/20 rounded-full text-xs font-medium text-accent opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                    Machine Learning
                  </div>
                  
                  <!-- Botón de más info -->
                  <a href="#contacto" class="inline-flex items-center text-accent text-sm font-medium hover:underline group-hover:translate-x-1 transition-transform">
                    <span>Saber más</span>
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        <div class="bg-surface/80 backdrop-blur-xl border-2 border-accent/40 rounded-3xl shadow-lg hover:shadow-[0_0_24px_#00F0FF88] transition-all duration-500 p-8">
          <div class="text-accent mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 stroke-current" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold tracking-wide mb-4 text-accent">Detección de Fraudes</h3>
          <p class="text-text-secondary">
            Algoritmos inteligentes que detectan y previenen fraudes mediante el análisis de patrones y anomalías en conjuntos de datos.
          </p>
        </div>
        <div class="bg-surface/80 backdrop-blur-xl border-2 border-accent/40 rounded-3xl shadow-lg hover:shadow-[0_0_24px_#00F0FF88] transition-all duration-500 p-8">
          <div class="text-accent mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 stroke-current" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
            </svg>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold tracking-wide mb-4 text-accent">Previsión de Demanda</h3>
          <p class="text-text-secondary">
            Análisis de datos de mercado en tiempo real para revelar tendencias estacionales y realizar predicciones de ventas precisas.
          </p>
        </div>
        <div class="bg-surface/80 backdrop-blur-xl border-2 border-accent/40 rounded-3xl shadow-lg hover:shadow-[0_0_24px_#00F0FF88] transition-all duration-500 p-8">
          <div class="text-accent mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 stroke-current" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold tracking-wide mb-4 text-accent">Precios Dinámicos</h3>
          <p class="text-text-secondary">
            Modelos de machine learning que ajustan automáticamente precios según la demanda actual del mercado.
          </p>
        </div>
        <div class="bg-surface/80 backdrop-blur-xl border-2 border-accent/40 rounded-3xl shadow-lg hover:shadow-[0_0_24px_#00F0FF88] transition-all duration-500 p-8">
          <div class="text-accent mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 stroke-current" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold tracking-wide mb-4 text-accent">Chatbots y Asistentes Virtuales</h3>
          <p class="text-text-secondary">
            Desarrollo de asistentes inteligentes utilizando procesamiento de lenguaje natural y aprendizaje profundo.
          </p>
        </div>
        <div class="bg-surface/80 backdrop-blur-xl border-2 border-accent/40 rounded-3xl shadow-lg hover:shadow-[0_0_24px_#00F0FF88] transition-all duration-500 p-8">
